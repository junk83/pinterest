      <div class="Board Module boardCoverImage">
        <%= link_to board_path(board.id), class: "boardLinkWrapper", data: { turbolinks: false } do %>
        <!-- <a class="boardLinkWrapper" href="/drivethruprm/test/"> -->
          <div class="boardName">
            <div class="BoardIcons Module pinCreate"></div>
            <div class="name" style="padding: 2px 0px;">
              <%= board.name %>
            </div>
            <div class="boardPinCount">
              <div class="Module PinCount">
                <span>
                  <span class="value">
                    <%= board.pinings.count %>
                  </span>
                  <span class="label">件のピン</span>
                </span>
              </div>
            </div>
          </div>
          <div class="boardImagesWrapper">
            <div class="boardCoverWrapper">
              <span class="hoverMask" style="z-index: 0;"></span>
              <%= image_tag board.pinings.first.pin.image , alt: "#{board.name}" ,class: "boardCover" if board.pinings.first %>
