              <li>
                <span class="hoverMask" style="z-index: 0;"></span>
                <%= image_tag board.pinings.fourth.pin.image_url(:thumb), class: "thumb" if board.pinings.fourth %>
                <!-- <img class="thumb" alt="" src="https://s-media-cache-ak0.pinimg.com/150x150/7e/2f/38/7e2f3897b382d1967fd291c2699a27a2.jpg"> -->
